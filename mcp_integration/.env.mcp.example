# MCP Enhanced Search Configuration
# Copy this file to .env and fill in your credentials

# =============================================================================
# ATLASSIAN MCP SERVER (Jira + Confluence)
# =============================================================================
# Get these from your Atlassian account settings
ATLASSIAN_API_TOKEN=your_atlassian_api_token_here
ATLASSIAN_DOMAIN=your-company.atlassian.net
ATLASSIAN_EMAIL=your-email@company.com

# =============================================================================
# SLACK MCP SERVER
# =============================================================================
# Get these from your Slack app configuration
SLACK_BOT_TOKEN=xoxb-your-slack-bot-token-here
SLACK_APP_TOKEN=xapp-your-slack-app-token-here
SLACK_SIGNING_SECRET=your-slack-signing-secret-here

# =============================================================================
# GITHUB MCP SERVER (Optional - for additional context)
# =============================================================================
# Get this from GitHub Settings > Developer settings > Personal access tokens
GITHUB_PERSONAL_ACCESS_TOKEN=ghp_your_github_token_here

# =============================================================================
# MCP SERVER CONFIGURATION
# =============================================================================
# Enable/disable specific MCP servers (true/false)
MCP_ATLASSIAN_ENABLED=true
MCP_SLACK_ENABLED=true
MCP_GITHUB_ENABLED=false
MCP_MEMORY_ENABLED=true

# MCP server timeout settings (in seconds)
MCP_SERVER_TIMEOUT=30
MCP_CONNECTION_TIMEOUT=10

# =============================================================================
# SEARCH ENHANCEMENT SETTINGS
# =============================================================================
# Enable MCP enhancement for existing search results
MCP_ENHANCE_EXISTING_SEARCH=true

# Maximum number of results to return per platform
MCP_MAX_RESULTS_PER_PLATFORM=10

# Semantic similarity threshold (0.0 to 1.0)
MCP_SIMILARITY_THRESHOLD=0.7

# Enable result deduplication
MCP_ENABLE_DEDUPLICATION=true

# =============================================================================
# LOGGING AND DEBUG
# =============================================================================
# Set to DEBUG for detailed MCP server logs
MCP_LOG_LEVEL=INFO

# Enable MCP server debug mode
MCP_DEBUG_MODE=false
